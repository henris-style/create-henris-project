{
  "name": "<%= project_name %>",
  "version": "1.0.0",
  "description": "<%= project_description %>",
  "author": "<%= project_author %>",
  "private": true,
  "scripts": {
    "stylelint": "stylelint '**/*.vue' '**/*.scss'",
    "stylelint:fix": "stylelint '**/*.vue' '**/*.scss' --fix"
  },
  "devDependencies": {
    "@henris/next": "^1.0.10",
    "@henris/custom": "^0.0.2",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.2.2",
    "eslint-plugin-prettier": "^3.0.0",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.10.1",
    "stylelint-logical-order": "^0.0.5",
    "stylelint-order": "^2.2.0",
    "guyn": "*"
  },
  "browserslist": ["last 2 versions", "not dead"],
  "stylelint": {
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "if",
            "for",
            "else",
            "each",
            "mixin",
            "include",
            "content",
            "at-root"
          ]
        }
      ],
      "order/order": [
        "custom-properties",
        "dollar-variables",
        "declarations",
        "rules"
      ],
      "indentation": "tab"
    },
    "extends": ["stylelint-logical-order"]
  }
}
